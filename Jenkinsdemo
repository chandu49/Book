pipeline {
    agent any
    environment {
	  build_number='101'
	  }
    stages {
        stage('Dev SCM') {
            steps {
                echo "dev app ${build_number}"
            }
        }
		stage('SIT SCM') {
            steps {
                echo 'STAGING App'
            }
        }
		stage('Prod SCM') {
            steps {
                echo 'Prod App Changing '
            }
        }
    }
}
